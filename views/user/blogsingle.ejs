<%- include('partials/header') %>

    <main class="flex-1 pt-32 md:px-20 px-4">
        <% if (blog) { %>
            <section class="max-w-4xl mx-auto mb-16">
                <% if (blog.isFeatured) { %>
                    <span
                        class="inline-block bg-blue-100 text-blue-700 font-bold px-4 py-1 rounded-full mb-4 text-xs">Featured</span>
                    <% } %>
                        <h1 class="text-3xl md:text-4xl font-extrabold text-gray-900 mb-4 leading-tight">
                            <%= blog.blogTitle %>
                        </h1>
                        <div class="flex items-center gap-4 mb-8">
                            <img src="https://placehold.co/48x48/cccccc/333333?text=Author" alt="Author"
                                class="w-12 h-12 rounded-full object-cover border-2 border-blue-200">
                            <div>
                                <p class="text-gray-700 font-semibold">By Bucci</p>
                                <p class="text-xs text-gray-500">
                                    <%= new Date(blog.createdAt).toLocaleDateString('en-US', { year: 'numeric' ,
                                        month: 'long' , day: 'numeric' }) %>
                                        &bull;
                                        <%= Math.ceil(blog.blogContent.split(' ').length / 200) %> min read
                    </p>
                </div>
            </div>
            <img src="<%= blog.blogImage %>" alt="<%= blog.blogTitle %> Main Image"
                class="rounded-2xl shadow-xl w-full h-80 object-cover mb-8">
        </section>

        <section class="max-w-4xl mx-auto bg-white rounded-3xl shadow-xl p-8 md:p-16 mb-20">
            <div class="prose max-w-none">
                <%- blog.blogContent %>
            </div>

            <% if (blog.blogQuote) { %>
                <blockquote class="border-l-4 border-blue-600 pl-4 italic text-blue-700 bg-blue-50 rounded-lg my-8 py-4">
                    “<%= blog.blogQuote %>”
                </blockquote>
            <% } %>

            <div class="flex flex-wrap gap-4 mt-8">
                <% if (blog.categories && Array.isArray(blog.categories)) { %>
                    <% blog.categories.forEach(function(cat) { %>
                        <span class="bg-blue-100 text-blue-700 px-3 py-1 rounded-full text-xs font-semibold">
                            <%= cat %>
                        </span>
                    <% }); %>
                <% } else if (blog.categories) { %>
                    <span class="bg-blue-100 text-blue-700 px-3 py-1 rounded-full text-xs font-semibold">
                        <%= blog.categories %>
                    </span>
                <% } %>
            </div>
        </section>
    <% } else { %>
        <section class="max-w-4xl mx-auto text-center py-20">
            <h2 class="text-3xl font-bold text-gray-800 mb-4">Blog Post Not Found</h2>
            <p class="text-gray-600">The blog post you are looking for does not exist or has been removed.</p>
        </section>
    <% } %>

    <div class="text-center mb-20">
        <a href="/blog"
            class="inline-block bg-blue-600 text-white font-semibold py-3 px-8 rounded-lg shadow-lg hover:bg-blue-700 transition duration-300">&larr;
            Back to Blog</a>
    </div>
</main>

<%- include('partials/footer') %>